<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">


<tiles-definitions>
	<definition name="layouts-tiles"	 template="WEB-INF/views/tiles/layouts.jsp">
		<put-attribute name="css"			value="/WEB-INF/views/titles/css.jsp"/>
		<put-attribute name="js"			value="/WEB-INF/views/titles/js.jsp"/>
		<put-attribute name="header"		value="/WEB-INF/views/titles/header.jsp"/>
		<put-attribute name="footer"		value="/WEB-INF/views/titles/footer.jsp"/>
		<put-attribute name="content"		value=""/>
		<put-attribute name="menu"			value="/WEB-INF/views/titles/menu.jsp"/>
	</definition>
	
	<definition name="*/*.tiles" extends="layouts-tiles">
		<put-attribute name="content"	value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>